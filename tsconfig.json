{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@shared/*": ["src/shared/*"],
      "@main/*": ["src/main/*"],
      "@render/*": ["src/render/*"],
      "@preload/*": ["src/preload/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}
